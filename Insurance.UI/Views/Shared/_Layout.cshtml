@using Microsoft.AspNetCore.Identity

@{
    Layout = null;

    // In a real application, you would use authentication data from the HttpContext
    // The User object is automatically populated by the Identity framework
    bool isAuthenticated = User.Identity.IsAuthenticated;
    string userName = "John Doe"; // Placeholder for the authenticated user's name
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PoliSure</title>

    <link rel="shortcut icon" href="~/images/favi.png" type="image/png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-gradient {
            background-color: #1a1a2e;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: 600;
        }

        .nav-link {
            transition: color 0.3s ease-in-out;
        }

            .nav-link:hover {
                color: #6a0dad !important;
            }

        .btn-auth {
            border-radius: 50px;
            padding: 8px 20px;
            transition: background-color 0.3s ease-in-out;
        }

        .btn-register {
            background-color: #007bff;
            color: #fff;
        }

            .btn-register:hover {
                background-color: #0056b3;
            }

        .btn-logout {
            background-color: #dc3545;
            color: #fff;
        }

            .btn-logout:hover {
                background-color: #c82333;
            }

        .footer {
            background-color: #1a1a2e;
            color: #fff;
            padding: 20px 0;
            margin-top: auto;
            border-top: 2px solid #333;
        }

        .social-icons a {
            color: #fff;
            margin: 0 10px;
            font-size: 1.5rem;
            transition: color 0.3s ease-in-out;
        }

            .social-icons a:hover {
                color: #007bff;
            }

        @@media (max-width: 991px) {
            .navbar-nav {
                text-align: center;
                margin-top: 15px;
            }

            .navbar-collapse {
                flex-grow: 0;
            }

            .ms-auto.d-flex {
                flex-direction: column;
                margin-top: 15px;
                align-items: center !important;
            }

                .ms-auto.d-flex > a {
                    margin-bottom: 10px;
                }
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark py-3 navbar-gradient">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold fs-4" href="@Url.Action("Index", "Home")">
                <img src="https://placehold.co/40x40/FFFFFF/000000?text=PS" alt="PoliSure Logo" />
                PoliSure
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-4">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("BuyPolicy", "Policy")">Policy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("FileClaim", "Claim")">Claim</a>
                    </li>
                </ul>

                <div class="ms-auto d-flex align-items-center">
                    @if (!isAuthenticated)
                    {
                    <a class="btn btn-register btn-auth me-2" href="@Url.Action("Register", "Customer")">Register</a>
                    <a class="btn btn-outline-light btn-auth" href="@Url.Action("Login", "Customer")">Login</a>
                    }
                    else
                    {
                    <a class="nav-link text-white me-3" href="@Url.Action("CustomerDashboard", "Customer")">
                        <i class="fas fa-user-circle me-1"></i> Hello, @userName!
                    </a>
                    <a class="btn btn-logout btn-auth" href="@Url.Action("Logout", "Account")">Logout</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-3">
        @RenderBody()
    </div>

    <footer class="footer text-center">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <p class="mb-2">Follow Us</p>
                    <div class="social-icons mb-3">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                    </div>
                    <p class="mb-0">&copy; @DateTime.Now.Year - PoliSure. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
