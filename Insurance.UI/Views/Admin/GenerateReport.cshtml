@{
    ViewData["Title"] = "Generate Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="card p-5 rounded-4 shadow-lg mx-auto" style="max-width: 640px;">
        <h4 class="mb-4 text-center fw-bold text-primary">Generate a New Report</h4>
        <form method="post">
            <div class="mb-3">
                <label class="form-label text-muted">Report Type <span class="text-danger">*</span></label>
                <select class="form-select rounded-3 shadow-sm" required>
                    <option selected disabled value="">Select a report type...</option>
                    <option>Customer Report</option>
                    <option>Policy Report</option>
                    <option>Claim Report</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label text-muted">Report Name <span class="text-danger">*</span></label>
                <input class="form-control rounded-3 shadow-sm" type="text" placeholder="e.g., Q1 Customer Analysis" name="reportName" required />
            </div>
            <div class="row g-3">
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Start Date <span class="text-danger">*</span></label>
                    <input class="form-control rounded-3 shadow-sm" type="date" name="startDate" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">End Date <span class="text-danger">*</span></label>
                    <input class="form-control rounded-3 shadow-sm" type="date" name="endDate" required />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label text-muted">Report Format <span class="text-danger">*</span></label>
                <select class="form-select rounded-3 shadow-sm" required>
                    <option selected disabled value="">Select a report format...</option>
                    <option>PDF</option>
                    <option>Excel (XLSX)</option>
                    <option>CSV</option>
                </select>
            </div>
            <div class="mb-4">
                <label class="form-label text-muted">Policy Number</label>
                <input class="form-control rounded-3 shadow-sm" name="policyNo" placeholder="Optional" />
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-primary rounded-pill px-4 flex-fill">
                    <i class="fas fa-file-download me-2"></i> Generate
                </button>
                <a class="btn btn-outline-secondary rounded-pill px-4" href="/Admin/Reports">
                    <i class="fas fa-arrow-left me-2"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
