@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h2 class="fw-bold text-dark">Admin Control Panel</h2>
        <!-- This is a placeholder for a real-world user greeting -->
        <span class="text-muted fs-5">Welcome, Admin!</span>
    </div>

    <div class="card p-4 rounded-4 shadow-lg mb-5">
        <div class="card-header border-0 bg-white d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0 text-primary">Policy Management</h4>
            <a href="@Url.Action("CreatePolicy", "Admin")" class="btn btn-primary rounded-pill px-4">
                <i class="fas fa-plus me-2"></i> Add New Policy
            </a>
        </div>
        <div class="card-body p-0">
            <p class="text-secondary mb-4">Below is a list of all active and pending insurance policies. Use the options to manage policy details, claims, and customer information.</p>
            <div class="table-responsive rounded-4 shadow-sm">
                <table class="table table-striped table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" class="text-muted fw-normal">Policy Number</th>
                            <th scope="col" class="text-muted fw-normal">Customer Name</th>
                            <th scope="col" class="text-muted fw-normal">Type</th>
                            <th scope="col" class="text-muted fw-normal">Status</th>
                            <th scope="col" class="text-muted fw-normal">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Placeholder rows for demonstration purposes -->
                        <tr>
                            <td>PS-001-2023</td>
                            <td>Jane Doe</td>
                            <td>Comprehensive</td>
                            <td><span class="badge bg-success">Active</span></td>
                            <td>
                                <a href="#" class="btn btn-outline-primary btn-sm me-2">View</a>
                                <a href="#" class="btn btn-outline-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        <tr>
                            <td>PS-002-2023</td>
                            <td>John Smith</td>
                            <td>Third Party</td>
                            <td><span class="badge bg-warning text-dark">Pending</span></td>
                            <td>
                                <a href="#" class="btn btn-outline-primary btn-sm me-2">View</a>
                                <a href="#" class="btn btn-outline-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        <tr>
                            <td>PS-003-2023</td>
                            <td>Emily White</td>
                            <td>Collision</td>
                            <td><span class="badge bg-success">Active</span></td>
                            <td>
                                <a href="#" class="btn btn-outline-primary btn-sm me-2">View</a>
                                <a href="#" class="btn btn-outline-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Other Dashboard Cards -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm rounded-4 h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">Recent Claims</h5>
                    <p class="card-text text-secondary">View and manage the most recent claims filed by customers.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm rounded-4 h-100">
                <div class="card-body">
                    <h5 class="card-title text-primary">Customer Inquiries</h5>
                    <p class="card-text text-secondary">Review and respond to recent customer support tickets and messages.</p>
                </div>
            </div>
        </div>
    </div>
</div>
