@{
    ViewData["Title"] = "PoliSure";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-section text-center py-5">
    <div class="container py-5">
        <h1 class="display-4 fw-bold mb-4 animate-fade-in">PoliSure: Your Vehicle Insurance Management System</h1>
        <p class="lead mb-4 animate-fade-in">
            Welcome! We are committed to making vehicle insurance simple and straightforward.
            Whether you're a customer looking to manage your policy or an admin overseeing operations,
            our system provides a seamless experience to help you stay protected on the road.
        </p>

    </div>
</section>

<section class="features-section py-5">
    <div class="container">
        <h2 class="display-5 text-center mb-5 animate-fade-in">Seamlessly Manage Your Insurance</h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0 animate-slide-up">
                    <div class="card-body">
                        <i class="fas fa-car-crash fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">File a Claim</h5>
                        <p class="card-text text-muted">Submit and track your claims easily online with our intuitive system.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0 animate-slide-up">
                    <div class="card-body">
                        <i class="fas fa-file-contract fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Manage Policies</h5>
                        <p class="card-text text-muted">View, renew, and manage all your policies in one place.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0 animate-slide-up">
                    <div class="card-body">
                        <i class="fas fa-headset fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">24/7 Support</h5>
                        <p class="card-text text-muted">Our dedicated support team is always available to assist you.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="quick-links-section py-5 bg-light">
    <div class="container text-center">
        <h2 class="display-5 mb-4">Ready to Get Started?</h2>
        <div class="d-flex justify-content-center">
            <a href="@Url.Action("BuyPolicy", "Policy")" class="btn btn-primary btn-lg mx-3 px-5 rounded-pill shadow-sm">Buy a New Policy</a>
            <a href="@Url.Action("FileClaim", "Claim")" class="btn btn-secondary btn-lg mx-3 px-5 rounded-pill shadow-sm">File a Claim</a>
        </div>
    </div>
</section>

<section class="why-us-section py-5">
    <div class="container text-center">
        <h2 class="display-5 mb-5">Why Choose PoliSure?</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="animate-slide-up">
                    <i class="fas fa-shield-alt fa-4x text-primary mb-3"></i>
                    <h5>Complete Protection</h5>
                    <p class="text-muted">Extensive coverage for all your vehicle insurance needs.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="animate-slide-up">
                    <i class="fas fa-lock fa-4x text-primary mb-3"></i>
                    <h5>Secure & Transparent</h5>
                    <p class="text-muted">Your data is safe, and our processes are completely transparent.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="animate-slide-up">
                    <i class="fas fa-star fa-4x text-primary mb-3"></i>
                    <h5>Exceptional Service</h5>
                    <p class="text-muted">A dedicated team ready to provide you with the best support.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
