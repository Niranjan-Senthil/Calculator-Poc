@{
    ViewData["Title"] = "Customer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Main Dashboard Header -->
    <div class="text-center mb-5">
        <h2 class="fw-bold text-dark mb-2">Welcome, @User.Identity.Name! 👋</h2>
        <p class="text-secondary">Your personal hub to manage your profile, vehicles, and policies.</p>
    </div>

    <!-- Main Grid of Dashboard Cards -->
    <div class="row g-4 justify-content-center">

        <!-- My Vehicles Card -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 rounded-4 h-100 text-center">
                <div class="card-body d-flex flex-column justify-content-between p-4">
                    <div class="mb-4">
                        <i class="fas fa-car fa-3x text-primary mb-3"></i>
                        <h5 class="fw-bold text-dark">My Vehicles</h5>
                        <p class="card-text text-secondary">View and manage all of your registered vehicles.</p>
                    </div>
                    <a href="#" class="btn btn-outline-primary rounded-pill mt-auto">
                        <i class="fas fa-edit me-2"></i> Manage Vehicles
                    </a>
                </div>
            </div>
        </div>

        <!-- My Claims Card -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 rounded-4 h-100 text-center">
                <div class="card-body d-flex flex-column justify-content-between p-4">
                    <div class="mb-4">
                        <i class="fas fa-file-invoice-dollar fa-3x text-success mb-3"></i>
                        <h5 class="fw-bold text-dark">My Claims</h5>
                        <p class="card-text text-secondary">Track the status of your insurance claims and submit new ones.</p>
                    </div>
                    <a href="#" class="btn btn-outline-success rounded-pill mt-auto">
                        <i class="fas fa-search me-2"></i> View Claims
                    </a>
                </div>
            </div>
        </div>

        <!-- My Profile Card -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 rounded-4 h-100 text-center">
                <div class="card-body d-flex flex-column justify-content-between p-4">
                    <div class="mb-4">
                        <i class="fas fa-user-circle fa-3x text-info mb-3"></i>
                        <h5 class="fw-bold text-dark">My Profile</h5>
                        <p class="card-text text-secondary">Update your personal information and contact details.</p>
                    </div>
                    <a href="#" class="btn btn-outline-info rounded-pill mt-auto">
                        <i class="fas fa-edit me-2"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>
        
        <!-- My Reports Card -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 rounded-4 h-100 text-center">
                <div class="card-body d-flex flex-column justify-content-between p-4">
                    <div class="mb-4">
                        <i class="fas fa-chart-bar fa-3x text-warning mb-3"></i>
                        <h5 class="fw-bold text-dark">My Reports</h5>
                        <p class="card-text text-secondary">View detailed reports on your policies and claims.</p>
                    </div>
                    <a href="#" class="btn btn-outline-warning rounded-pill mt-auto">
                        <i class="fas fa-file-alt me-2"></i> View My Reports
                    </a>
                </div>
            </div>
        </div>
        
        <!-- My Policies Card -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 rounded-4 h-100 text-center">
                <div class="card-body d-flex flex-column justify-content-between p-4">
                    <div class="mb-4">
                        <i class="fas fa-file-alt fa-3x text-danger mb-3"></i>
                        <h5 class="fw-bold text-dark">My Policies</h5>
                        <p class="card-text text-secondary">Review your active and past insurance policies.</p>
                    </div>
                    <a href="@Url.Action("ViewPolicies", "Policy")" class="btn btn-outline-danger rounded-pill mt-auto">
                        <i class="fas fa-id-card me-2"></i> View Policies
                    </a>
                </div>
            </div>
        </div>

    </div>

    <hr class="my-5">

    <!-- Your Vehicles & Recent Activity Section -->
    <div class="text-center mb-4">
        <h4 class="fw-bold text-dark">Your Vehicles & Recent Activity</h4>
    </div>

    <div class="card shadow-sm rounded-4 border-dashed bg-light text-center py-5 px-3">
        <i class="fas fa-car-crash fa-3x text-secondary mb-3"></i>
        <h5 class="text-dark">You haven't added any vehicles yet.</h5>
        <p class="text-secondary mb-4">Let's get you set up to manage your insurance.</p>
        <a href="#" class="btn btn-primary rounded-pill px-5 py-2 shadow-sm d-inline-block mx-auto">
            <i class="fas fa-plus me-2"></i> Add Your First Vehicle
        </a>
    </div>

</div>

<style>
    .border-dashed {
        border: 2px dashed #e9ecef;
    }
</style>
