@{
    ViewData["Title"] = "Customer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="fw-bold">Welcome, @User.Identity.Name! 👋</h2>
    <p class="text-muted">This is your personal dashboard. You can view your details and manage your policies here.</p>

    <!-- Your Profile Details Table (re-added as requested) -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Your Profile Details</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <tbody>
                        <!-- In a real application, this data would be dynamically populated from the database -->
                        <tr>
                            <th scope="row">Username:</th>
                            <td>@User.Identity.Name</td>
                        </tr>
                        <tr>
                            <th scope="row">First Name:</th>
                            <td>John</td>
                        </tr>
                        <tr>
                            <th scope="row">Last Name:</th>
                            <td>Doe</td>
                        </tr>
                        <tr>
                            <th scope="row">Email:</th>
                            <td>placeholder@example.com</td>
                        </tr>
                        <tr>
                            <th scope="row">Phone Number:</th>
                            <td>+1 (555) 123-4567</td>
                        </tr>
                        <tr>
                            <th scope="row">Date of Birth:</th>
                            <td>1990-01-01</td>
                        </tr>
                        <tr>
                            <th scope="row">Address:</th>
                            <td>123 Main St, Anytown, USA 12345</td>
                        </tr>
                        <tr>
                            <th scope="row">Registration Date:</th>
                            <td>2024-05-24</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Your Vehicle Details</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <tbody>
                        <!-- This data would be dynamically populated from the database in a real application -->
                        <tr>
                            <th scope="row">Make:</th>
                            <td>Honda</td>
                        </tr>
                        <tr>
                            <th scope="row">Model:</th>
                            <td>Activa 6G</td>
                        </tr>
                        <tr>
                            <th scope="row">License Plate:</th>
                            <td>KA01AB1234</td>
                        </tr>
                        <tr>
                            <th scope="row">VIN:</th>
                            <td>1HFSC4142V5...</td>
                        </tr>
                        <tr>
                            <th scope="row">Registration Date:</th>
                            <td>2022-03-15</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Your Existing Policies</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Policy Number</th>
                            <th>Policy Type</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- This data would be dynamically populated from the database in a real application -->
                        <tr>
                            <td>PS-001-COMP-2024</td>
                            <td>Comprehensive</td>
                            <td>2024-05-01</td>
                            <td>2025-04-30</td>
                            <td class="text-success">Active</td>
                        </tr>
                        <tr>
                            <td>PS-002-TP-2023</td>
                            <td>Third Party</td>
                            <td>2023-08-10</td>
                            <td>2024-08-09</td>
                            <td class="text-danger">Expired</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mb-4 bg-light text-center py-4">
        <h4 class="mb-2">Looking for a new plan?</h4>
        <p class="text-muted mb-3">Explore our latest vehicle insurance policies and find the perfect one to protect your vehicle and your peace of mind.</p>
        <a href="@Url.Action("Index", "Policy")" class="btn btn-success btn-lg">View Our Plans</a>
    </div>

    <div class="d-flex justify-content-end">
        <a href="#" class="btn btn-primary btn-lg">Edit / Update</a>
    </div>
</div>
