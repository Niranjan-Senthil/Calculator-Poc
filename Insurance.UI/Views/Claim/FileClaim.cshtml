@{
    ViewData["Title"] = "File Claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .claim-section {
        max-width: 960px;
        margin: auto;
    }
</style>

<div class="claim-section mt-5">
    <h1 class="text-center display-4 mb-5">Claim Management</h1>

    <!-- File a Claim Section -->
    <div class="card my-4 p-4 shadow-sm">
        <h2 class="h4 card-title text-primary">File a Claim</h2>
        <p class="card-text text-muted">
            Initiate a new claim by providing details about the incident. Please note that for filing a claim, you need to contact your agent or visit our office. Our representative will guide you through the process and help you with the required documentation.
        </p>
    </div>

    <!-- My Claim History Section -->
    <div class="card my-4 p-4 shadow-sm">
        <h2 class="h4 card-title text-success">My Claim History</h2>
        <p class="card-text text-muted">
            Review the status of your past and current claims here. This section provides a comprehensive record of all claims filed under your policies, including their submission date, status, and any actions required from you.
        </p>
    </div>
</div>
