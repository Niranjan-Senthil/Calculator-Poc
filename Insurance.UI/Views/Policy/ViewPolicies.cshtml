@{
    ViewData["Title"] = "My Policies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- Page Header -->
    <div class="text-center mb-5">
        <div class="p-4 d-inline-flex flex-column align-items-center bg-white rounded-4 shadow-sm border">
            <i class="fas fa-file-invoice fa-3x text-primary mb-3"></i>
            <h2 class="fw-bold text-dark mb-2">My Policies</h2>
        </div>
    </div>

    <!-- Create Policy Section -->
    <div class="card p-4 rounded-4 shadow-lg mb-5">
        <div class="card-body d-flex flex-column align-items-center text-center">
            <h4 class="fw-bold text-dark mb-3">Create a New Policy</h4>
            <p class="text-secondary mb-4">
                It looks like you don't have any policies yet. Let's create one!
            </p>
            <a href="@Url.Action("CreatePolicy", "Policy")" class="btn btn-primary rounded-pill px-5 py-2">
                <i class="fas fa-plus me-2"></i> Create Your First Policy
            </a>
        </div>
    </div>

    <!-- Active Policies Table (placeholder) -->
    <div class="card p-4 rounded-4 shadow-lg mb-5">
        <div class="card-header border-0 bg-white d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0 text-primary">Your Policies</h4>
            <a href="@Url.Action("CreatePolicy", "Admin")" class="btn btn-primary rounded-pill px-4">
                <i class="fas fa-plus me-2"></i> Create New Policy
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive rounded-4 shadow-sm">
                <table class="table table-striped table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" class="text-muted fw-normal">Policy Number</th>
                            <th scope="col" class="text-muted fw-normal">Policy Type</th>
                            <th scope="col" class="text-muted fw-normal">Status</th>
                            <th scope="col" class="text-muted fw-normal">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- This data would be dynamically populated -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
